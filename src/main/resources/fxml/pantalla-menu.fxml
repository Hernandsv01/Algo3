<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.PantallaMenuController">
    <!-- Background Image -->
    <ImageView fitHeight="480.0" fitWidth="640.0" pickOnBounds="true">
        <image>
            <Image url="@imagenes/pantalla_fondo.gif" />
        </image>
    </ImageView>

    <!-- Buttons -->
    <Button fx:id="jugarButton" onKeyPressed="#onJugarKeyPressed" stylesheets="@estilos.css" text="Jugar">
    </Button>

    <Button fx:id="ayudaButton" onKeyPressed="#onAyudaKeyPressed" stylesheets="@estilos.css" text="Ayuda" translateY="80.0">
    </Button>

    <Button fx:id="salirButton" onKeyPressed="#onSalirKeyPressed" stylesheets="@estilos.css" text="Salir" translateY="160.0">
    </Button>

    <!-- Title -->
    <ImageView fitHeight="180.0" fitWidth="380.0" pickOnBounds="true" preserveRatio="true" translateY="-150.0">
        <image>
            <Image url="@imagenes/titulo_pokemon.png" />
        </image>
    </ImageView>

    <!-- Subtitle -->
    <Label alignment="CENTER" prefHeight="29.0" prefWidth="146.0" text="El rejunte" textAlignment="CENTER" translateY="-80.0">
        <font>
            <Font name="PKMN RBYGSC Regular" size="17.0" />
        </font>
    </Label>

    <!-- Style buttons -->
    <stylesheets>
        <URL value="@estilos.css" />
    </stylesheets>
</StackPane>
